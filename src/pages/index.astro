---
import Layout from "../layouts/Layout.astro";
const { content } = Astro.props;
import { Img } from "astro-imagetools/components";
import earth from  "/src/images/earth.png?w=400&h=400&format=webp&q=80";
import cover from  "/src/images/cover.png?format=webp&q=80";
import streetview from "/src/images/streetview.png?format=webp&q=80";
import vote from "/src/images/vote.png?format=webp&q=80";
import capture from "/src/images/capture.png?format=webp&q=80";
import stars  from "/src/images/stars.png?format=webp&q=80";
let starsOptimized = "url(" + stars + ")";
---

<Layout title="GroupGames.io">
	<main class="grow min-h-full min-w-full p-4
">
		<div class="md:flex-row flex-col flex w-full justify-evenly items-center h-full">

			<div class="absolute w-full overflowthing h-full -z-20">
				<div class="relative -z-20 sliding-background h-full">
				</div>
			</div>
			<div>
				<h1 class="text-white font-black text-xl md:text-6xl text-center">GroupGames.io</h1>
				<h1 class="text-white font-black md:text-xl py-2 text-center">games made by me to have fun with a group of people</h1>
			</div>

      
		</div>
    <div class="h-full flex flex-col justify-center items-center">
    <div class="grid md:grid-cols-3 justify-center items-center gap-4 p-2 w-full h-[178px]" >
          <div class="rounded-md">
        <a href="https://geobingo.io">
            <Img src={"https://geobingo.io/cover.png"} alt="geobingo logo"/>
          </a>
          </div>
          <div class="flex items-center text-center bg-gray-900 w-full  justify-center h-[178px]">
            <a href="https://WikiParty.org">
            <span class="text-white text-6xl">WikiParty.org</span>
            </a>
          </div>
          <div class="flex items-center text-center bg-slate-800 w-full justify-center h-[178px]">
            <a href="https://WhenWasThisPhotoTaken.com">
            <span class="text-white text-3xl">WhenWasThisPhotoTaken.com</span>
            </a>
          </div>
          <div class="flex items-center text-center bg-slate-800 w-full justify-center h-[178px]">
            <a href="https://song-game.netlify.app/">
            <span class="text-white text-6xl">Song Game</span>
            </a>
          </div>
    </div>
    </div>

	</main>

</Layout>
<style define:vars={{starsOptimized}}>
	.sliding-background {
		background: black var(--starsOptimized) repeat;
		min-height: 1080px;
		width: 5076px;
		animation: slide 120s linear infinite;
	}

	.overflowthing {
		overflow: hidden;
	}

	@keyframes slide {
		0% {
			transform: translate3d(0, 0, 0);
		}

		100% {
			transform: translate3d(-1692px, 0, 0);
		}
	}
</style>
